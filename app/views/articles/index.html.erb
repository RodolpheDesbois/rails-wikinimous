<div class="container">
  <h1>My articles</h1>
  <ul class="list-group">
    <% @articles.each do |article| %>
      <li class="list-group-item">
      <%= link_to article.title, article_path(article) %>
    <% end %>
    </li>
  </ul>
  <br>
  <button type="button" class="btn btn-light">
    <%= link_to "Add a new article", new_article_path(@article) %>
  </button>
</div>
